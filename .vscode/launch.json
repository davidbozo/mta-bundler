{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MTA Bundler",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-o",
                "${input:outputPath}",
                "${input:inputPath}",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug MTA Bundler in Merge mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-m",
                "-o",
                "${input:outputPath}",
                "${input:inputPath}",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "inputPath",
            "description": "Input path (file or directory)",
            "type": "promptString"
        },
        {
            "id": "outputPath",
            "description": "Output directory",
            "type": "promptString"
        }
    ]
}